  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Orientation="Vertical"
                   Spacing="15">
      <Label Text="LỖI KẾT NỐI. VUI LÒNG KIỂM TRA LẠI"
             VerticalOptions="Center"
             HorizontalOptions="Center" x:Name="MyLabel"
